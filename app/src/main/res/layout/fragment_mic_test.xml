<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- 스크롤 가능한 콘텐츠 영역 -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnStartTest"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 헤더 -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="마이크 테스트"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="마이크가 제대로 작동하는지 확인하세요"
                android:textSize="14sp"
                android:textColor="@color/text_secondary" />

            <!-- 마이크 상태 카드 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardMicStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">

                    <!-- 마이크 아이콘 -->
                    <ImageView
                        android:id="@+id/ivMicStatus"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@android:drawable/ic_btn_speak_now"
                        android:contentDescription="마이크"
                        app:tint="@android:color/darker_gray" />

                    <!-- 상태 텍스트 -->
                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="테스트 대기 중"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 음량 레벨 카드 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardVolume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="음량 레벨"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:id="@+id/tvVolumeValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-- dB"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary" />

                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/progressVolume"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:layout_marginTop="8dp"
                        android:max="100"
                        android:progress="0"
                        android:progressTint="@android:color/holo_green_light" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 피치 감지 카드 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="감지된 음정"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/tvPitchValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-- Hz"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 안내 텍스트 -->
            <TextView
                android:id="@+id/tvGuide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:text="• 테스트를 시작하고 마이크에 대고 말해보세요\n• 음량 레벨이 초록색이면 적절한 음량입니다\n• 피치가 감지되면 마이크가 정상 작동합니다"
                android:textSize="13sp"
                android:textColor="@color/text_secondary"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- 테스트 시작 버튼 (하단 고정) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnStartTest"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:text="테스트 시작"
        android:textSize="16sp"
        app:icon="@android:drawable/ic_btn_speak_now"
        app:iconGravity="textStart"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
