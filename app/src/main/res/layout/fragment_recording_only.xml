<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true"
    tools:context=".fragment.RecordingOnlyFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp">

        <!-- 녹음 시간 표시 (상단 중앙) -->
        <TextView
            android:id="@+id/tv_recording_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="00:00"
            android:textColor="#333333"
            android:textSize="48sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 녹음 상태 표시 -->
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="녹음 대기 중"
            android:textColor="#888888"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_recording_time" />

        <View
            android:id="@+id/view_recording_indicator"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginEnd="6dp"
            android:background="@android:drawable/presence_online"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/tv_status"
            app:layout_constraintEnd_toStartOf="@id/tv_status"
            app:layout_constraintTop_toTopOf="@id/tv_status" />

        <!-- 파동 원형 시각화 -->
        <com.example.musicplayer.view.WaveformCircleView
            android:id="@+id/waveform_circle_view"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_status" />

        <!-- 녹음 컨트롤 버튼들 -->
        <LinearLayout
            android:id="@+id/layout_controls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/waveform_circle_view">

            <!-- 일시정지/재개 버튼 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_pause"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginEnd="16dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="⏸"
                android:textSize="24sp"
                android:visibility="gone"
                app:cornerRadius="32dp"
                app:backgroundTint="#FFA726"
                tools:visibility="visible" />

            <!-- 녹음 시작 버튼 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_start"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginHorizontal="8dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="●"
                android:textSize="32sp"
                app:cornerRadius="40dp"
                app:backgroundTint="#4CAF50" />

            <!-- 녹음 완료 버튼 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_stop"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginStart="16dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="■"
                android:textSize="24sp"
                android:visibility="gone"
                app:cornerRadius="32dp"
                app:backgroundTint="#F44336"
                tools:visibility="visible" />

        </LinearLayout>

        <!-- 저장된 파일 정보 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/layout_saved_file"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_controls"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✓ 녹음 완료!"
                    android:textColor="#4CAF50"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_file_path"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="파일 경로: /storage/..."
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:ellipsize="middle"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/tv_file_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="파일 크기: 1.2 MB"
                    android:textColor="#666666"
                    android:textSize="12sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_share"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="12dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:contentDescription="공유하기"
                    app:icon="@android:drawable/ic_menu_share"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="24dp"
                    app:iconTint="@android:color/white"
                    app:cornerRadius="24dp"
                    app:backgroundTint="#2196F3"
                    style="@style/Widget.Material3.Button.Icon" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>