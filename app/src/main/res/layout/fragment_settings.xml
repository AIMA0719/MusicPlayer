<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_main"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Account Section (at top) -->
        <com.google.android.material.card.MaterialCardView
            style="@style/GlassCardStyle.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="계정"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/glass_text_tertiary"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="8dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/glass_divider" />

                <!-- 로그인된 사용자 정보 (Google 로그인 시) -->
                <LinearLayout
                    android:id="@+id/layoutAccountInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/ivProfileImage"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_person"
                        android:background="@drawable/bg_circle_gray"
                        android:padding="8dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:id="@+id/tvUserName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="사용자"
                            android:textSize="16sp"
                            android:textColor="@color/glass_text_primary"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvUserEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="email@example.com"
                            android:textSize="12sp"
                            android:textColor="@color/glass_text_tertiary"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- 로그인하기 버튼 (게스트 상태) -->
                <TextView
                    android:id="@+id/btnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Google 계정으로 로그인"
                    android:textSize="16sp"
                    android:textColor="#4285F4"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:background="?attr/selectableItemBackground"
                    android:drawableStart="@drawable/ic_google"
                    android:drawablePadding="12dp"
                    android:visibility="gone" />

                <View
                    android:id="@+id/dividerAccount"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/glass_divider"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:visibility="gone" />

                <!-- 로그아웃 버튼 (Google 로그인 상태) -->
                <TextView
                    android:id="@+id/btnLogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="로그아웃"
                    android:textSize="16sp"
                    android:textColor="#F04452"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:background="?attr/selectableItemBackground"
                    android:visibility="gone" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Game Section -->
        <com.google.android.material.card.MaterialCardView
            style="@style/GlassCardStyle.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="게임"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/glass_text_tertiary"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="8dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/glass_divider" />

                <TextView
                    android:id="@+id/btnAchievements"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="도전과제"
                    android:textSize="16sp"
                    android:textColor="@color/glass_text_primary"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:background="?attr/selectableItemBackground"
                    android:drawableEnd="@android:drawable/ic_menu_send" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/glass_divider"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp" />

                <TextView
                    android:id="@+id/btnStatistics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="내 통계"
                    android:textSize="16sp"
                    android:textColor="@color/glass_text_primary"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:background="?attr/selectableItemBackground"
                    android:drawableEnd="@android:drawable/ic_menu_send" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- App Settings Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/GlassCardStyle.Small">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="앱 설정"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/glass_text_tertiary"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="8dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/glass_divider" />

                <!-- Theme -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="다크 모드"
                        android:textSize="16sp"
                        android:textColor="@color/glass_text_primary" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchDarkMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/glass_divider"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp" />

                <!-- Notifications -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="알림"
                        android:textSize="16sp"
                        android:textColor="@color/glass_text_primary" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchNotifications"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Audio Settings Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/GlassCardStyle.Small">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오디오 설정"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/glass_text_tertiary"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="8dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/glass_divider" />

                <!-- 리버브 설정 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="리버브 (잔향)"
                            android:textSize="16sp"
                            android:textColor="@color/glass_text_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="노래방 분위기 효과"
                            android:textSize="12sp"
                            android:textColor="@color/glass_text_tertiary"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchReverb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/glass_divider"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp" />

                <!-- 리버브 프리셋 -->
                <TextView
                    android:id="@+id/btnReverbPreset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="리버브 프리셋"
                    android:textSize="16sp"
                    android:textColor="@color/glass_text_primary"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:background="?attr/selectableItemBackground"
                    android:drawableEnd="@android:drawable/ic_menu_send" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/glass_divider"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp" />

                <!-- 기본 키 설정 -->
                <TextView
                    android:id="@+id/btnDefaultKey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="기본 키 설정"
                    android:textSize="16sp"
                    android:textColor="@color/glass_text_primary"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:background="?attr/selectableItemBackground"
                    android:drawableEnd="@android:drawable/ic_menu_send" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/glass_divider"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp" />

                <!-- 마이크 테스트 -->
                <TextView
                    android:id="@+id/btnMicTest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="마이크 테스트"
                    android:textSize="16sp"
                    android:textColor="@color/glass_text_primary"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:background="?attr/selectableItemBackground"
                    android:drawableEnd="@android:drawable/ic_menu_send" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Recording Settings Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/GlassCardStyle.Small">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="녹음 설정"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/glass_text_tertiary"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="8dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/glass_divider" />

                <TextView
                    android:id="@+id/btnDefaultDifficulty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="기본 채점 난이도"
                    android:textSize="16sp"
                    android:textColor="@color/glass_text_primary"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:background="?attr/selectableItemBackground"
                    android:drawableEnd="@android:drawable/ic_menu_send" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Data Management Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/GlassCardStyle.Small">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="데이터 관리"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/glass_text_tertiary"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="8dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/glass_divider" />

                <TextView
                    android:id="@+id/btnClearCache"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="캐시 삭제"
                    android:textSize="16sp"
                    android:textColor="@color/glass_text_primary"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:background="?attr/selectableItemBackground" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/glass_divider"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp" />

                <TextView
                    android:id="@+id/btnManageRecordings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="녹음 파일 관리"
                    android:textSize="16sp"
                    android:textColor="@color/glass_text_primary"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:background="?attr/selectableItemBackground"
                    android:drawableEnd="@android:drawable/ic_menu_send" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Support Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/GlassCardStyle.Small">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="지원"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/glass_text_tertiary"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="8dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/glass_divider" />

                <TextView
                    android:id="@+id/btnContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="문의하기"
                    android:textSize="16sp"
                    android:textColor="@color/glass_text_primary"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:background="?attr/selectableItemBackground" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/glass_divider"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp" />

                <TextView
                    android:id="@+id/btnRateApp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="앱 평가하기"
                    android:textSize="16sp"
                    android:textColor="@color/glass_text_primary"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:background="?attr/selectableItemBackground" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/glass_divider"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp" />

                <TextView
                    android:id="@+id/btnShareApp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="앱 공유하기"
                    android:textSize="16sp"
                    android:textColor="@color/glass_text_primary"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:background="?attr/selectableItemBackground" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Legal Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/GlassCardStyle.Small">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="약관 및 정책"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/glass_text_tertiary"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="8dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/glass_divider" />

                <TextView
                    android:id="@+id/btnTermsOfService"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="이용약관"
                    android:textSize="16sp"
                    android:textColor="@color/glass_text_primary"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:background="?attr/selectableItemBackground"
                    android:drawableEnd="@android:drawable/ic_menu_send" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/glass_divider"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp" />

                <TextView
                    android:id="@+id/btnPrivacyPolicy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="개인정보 처리방침"
                    android:textSize="16sp"
                    android:textColor="@color/glass_text_primary"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:background="?attr/selectableItemBackground"
                    android:drawableEnd="@android:drawable/ic_menu_send" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- App Info Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/GlassCardStyle.Small">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="앱 정보"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/glass_text_tertiary"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="8dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/glass_divider" />

                <TextView
                    android:id="@+id/btnVersionInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="버전 정보"
                    android:textSize="16sp"
                    android:textColor="@color/glass_text_primary"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:background="?attr/selectableItemBackground"
                    android:drawableEnd="@android:drawable/ic_menu_send" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/glass_divider"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp" />

                <TextView
                    android:id="@+id/btnLibraryInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="오픈소스 라이선스"
                    android:textSize="16sp"
                    android:textColor="@color/glass_text_primary"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:background="?attr/selectableItemBackground"
                    android:drawableEnd="@android:drawable/ic_menu_send" />

            </LinearLayout>
