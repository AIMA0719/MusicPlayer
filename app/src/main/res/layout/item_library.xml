<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/tvLibraryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kotlin"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#191F28" />

        <TextView
            android:id="@+id/tvLibraryDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JVM용 정적 타입 프로그래밍 언어"
            android:textSize="14sp"
            android:textColor="#8B95A1"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvLibraryLicense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apache License 2.0"
            android:textSize="12sp"
            android:textColor="#3182F6"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
