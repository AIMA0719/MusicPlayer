<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp">

        <!-- 노래 제목 -->
        <TextView
            android:id="@+id/songTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="24dp"
            android:text="노래 제목"
            android:textColor="#333333"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 시간 표시 -->
        <TextView
            android:id="@+id/timeDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="00:00 / 03:25"
            android:textColor="#333333"
            android:textSize="40sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/songTitle" />

        <!-- 녹음 상태 -->
        <TextView
            android:id="@+id/recordingStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="녹음 대기 중"
            android:textColor="#888888"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/timeDisplay" />

        <!-- 피치 그래프 -->
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/pitchChart"
            android:layout_width="0dp"
            android:layout_height="280dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recordingStatus" />

        <!-- 실시간 점수 카드 (크기 축소) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/scoreCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pitchChart"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center">

                <!-- 현재 점수 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="현재 점수"
                        android:textColor="#666666"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/currentScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="0"
                        android:textColor="#4CAF50"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- 정확도 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="정확도"
                        android:textColor="#666666"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/accuracyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="0%"
                        android:textColor="#2196F3"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- 피치 차이 표시 -->
        <LinearLayout
            android:id="@+id/pitchFeedbackLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/scoreCard">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="현재 음정"
                android:textColor="#666666"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/pitchDifference"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="대기 중..."
                android:textSize="16sp"
                android:textColor="#333333"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- 버튼 영역 -->
        <LinearLayout
            android:id="@+id/buttonLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pitchFeedbackLayout">

            <!-- 일시정지 버튼 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPause"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginEnd="16dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="⏸"
                android:textSize="24sp"
                android:visibility="gone"
                app:cornerRadius="32dp"
                app:backgroundTint="#FFA726"
                tools:visibility="visible" />

            <!-- 시작 버튼 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStart"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginHorizontal="8dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="●"
                android:textSize="32sp"
                app:cornerRadius="40dp"
                app:backgroundTint="#4CAF50" />

            <!-- 완료 버튼 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStop"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginStart="16dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="■"
                android:textSize="24sp"
                android:visibility="gone"
                app:cornerRadius="32dp"
                app:backgroundTint="#F44336"
                tools:visibility="visible" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
