<resources>

    <!-- ================================================== -->
    <!-- Fullscreen Styles (Legacy) -->
    <!-- ================================================== -->
    <style name="Widget.Theme.MusicPlayer.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.MusicPlayer.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <!-- ================================================== -->
    <!-- Toast Animation -->
    <!-- ================================================== -->
    <style name="ToastAnimationStyle">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
    </style>

    <!-- ================================================== -->
    <!-- Glass Card Styles -->
    <!-- ================================================== -->
    <style name="GlassCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/glass_surface</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/glass_border</item>
    </style>

    <style name="GlassCardStyle.Elevated">
        <item name="cardBackgroundColor">@color/glass_surface_elevated</item>
        <item name="strokeColor">@color/glass_border_strong</item>
    </style>

    <style name="GlassCardStyle.Small">
        <item name="cardCornerRadius">12dp</item>
    </style>

    <!-- ================================================== -->
    <!-- Glass Button Styles -->
    <!-- ================================================== -->
    <style name="GlassButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/bg_glass_button_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <!-- <item name="android:fontFamily">@font/pretendard</item> -->
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="GlassButtonSecondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:background">@drawable/bg_glass_button_secondary</item>
        <item name="android:textColor">@color/glass_primary</item>
        <item name="android:textSize">16sp</item>
        <!-- <item name="android:fontFamily">@font/pretendard</item> -->
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="backgroundTint">@null</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="GlassButtonText" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/glass_primary</item>
        <item name="android:textSize">14sp</item>
        <!-- <item name="android:fontFamily">@font/pretendard</item> -->
        <item name="rippleColor">@color/glass_primary_10</item>
    </style>

    <!-- ================================================== -->
    <!-- Typography Styles -->
    <!-- ================================================== -->
    <style name="TextAppearance.Glass.Headline1" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/glass_text_primary</item>
        <!-- <item name="android:fontFamily">@font/pretendard</item> -->
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="TextAppearance.Glass.Headline2" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/glass_text_primary</item>
        <!-- <item name="android:fontFamily">@font/pretendard</item> -->
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="TextAppearance.Glass.Title" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/glass_text_primary</item>
        <!-- <item name="android:fontFamily">@font/pretendard</item> -->
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Glass.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/glass_text_primary</item>
        <!-- <item name="android:fontFamily">@font/pretendard</item> -->
        <item name="fontWeight">600</item>
    </style>

    <style name="TextAppearance.Glass.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/glass_text_primary</item>
        <!-- <item name="android:fontFamily">@font/pretendard</item> -->
        <item name="android:lineSpacingMultiplier">1.4</item>
    </style>

    <style name="TextAppearance.Glass.Body.Secondary">
        <item name="android:textColor">@color/glass_text_secondary</item>
    </style>

    <style name="TextAppearance.Glass.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/glass_text_tertiary</item>
        <!-- <item name="android:fontFamily">@font/pretendard</item> -->
    </style>

    <style name="TextAppearance.Glass.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/glass_text_tertiary</item>
        <!-- <item name="android:fontFamily">@font/pretendard</item> -->
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- ================================================== -->
    <!-- Bottom Sheet Dialog Theme -->
    <!-- ================================================== -->
    <style name="GlassBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/GlassBottomSheetStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>

    <style name="GlassBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_glass_bottom_sheet</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Glass.BottomSheet</item>
    </style>

    <style name="ShapeAppearance.Glass.BottomSheet" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <!-- Legacy Bottom Sheet (νΈν™μ„±) -->
    <style name="BottomSheetDialogTheme" parent="GlassBottomSheetDialogTheme" />
    <style name="BottomSheetStyle" parent="GlassBottomSheetStyle" />

    <!-- ================================================== -->
    <!-- Input Field Styles -->
    <!-- ================================================== -->
    <style name="GlassTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/glass_surface_dim</item>
        <item name="boxStrokeColor">@color/glass_border</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="hintTextColor">@color/glass_text_tertiary</item>
    </style>

    <!-- ================================================== -->
    <!-- Chip Styles -->
    <!-- ================================================== -->
    <style name="GlassChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/glass_chip_unselected</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="chipCornerRadius">20dp</item>
        <item name="android:textColor">@color/glass_chip_text_unselected</item>
        <item name="checkedIconVisible">false</item>
    </style>

    <!-- ================================================== -->
    <!-- Dialog Styles -->
    <!-- ================================================== -->
    <style name="GlassDialogStyle" parent="Theme.MaterialComponents.Dialog">
        <item name="android:background">@drawable/bg_glass_dialog</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="dialogCornerRadius">24dp</item>
    </style>

</resources>
