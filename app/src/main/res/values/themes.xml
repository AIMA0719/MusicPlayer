<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme with Glassmorphism -->
    <style name="Theme.MusicPlayer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary Colors (Blue) -->
        <item name="colorPrimary">@color/glass_primary</item>
        <item name="colorPrimaryVariant">@color/glass_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/glass_accent</item>
        <item name="colorSecondaryVariant">@color/glass_accent_light</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Surface Colors -->
        <item name="colorSurface">@color/glass_surface</item>
        <item name="colorOnSurface">@color/glass_text_primary</item>

        <!-- Background -->
        <item name="android:colorBackground">@color/app_background</item>
        <item name="colorOnBackground">@color/glass_text_primary</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Navigation Bar -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>

        <!-- Text Colors -->
        <item name="android:textColorPrimary">@color/glass_text_primary</item>
        <item name="android:textColorSecondary">@color/glass_text_secondary</item>
        <item name="android:textColorHint">@color/glass_text_tertiary</item>

        <!-- Typography - Pretendard (폰트 파일 추가 후 활성화)
        <item name="android:fontFamily">@font/pretendard</item>
        <item name="fontFamily">@font/pretendard</item>
        -->

        <!-- Shape Appearance -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Glass.Small</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Glass.Medium</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Glass.Large</item>

        <!-- Bottom Sheet -->
        <item name="bottomSheetDialogTheme">@style/GlassBottomSheetDialogTheme</item>
    </style>

    <!-- Fullscreen Theme -->
    <style name="Theme.MusicPlayer.Fullscreen" parent="Theme.MusicPlayer">
        <item name="android:actionBarStyle">@style/Widget.Theme.MusicPlayer.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ThemeOverlay.MusicPlayer.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/glass_primary</item>
        <item name="fullscreenTextColor">@color/white</item>
    </style>

    <!-- Legacy AppTheme -->
    <style name="AppTheme" parent="Theme.MusicPlayer" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Splash Theme -->
    <style name="Theme.MusicPlayer.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/glass_bg_start</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/white</item>
        <item name="postSplashScreenTheme">@style/Theme.MusicPlayer</item>
    </style>

    <!-- Shape Appearances -->
    <style name="ShapeAppearance.Glass.Small" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.Glass.Medium" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearance.Glass.Large" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

</resources>
